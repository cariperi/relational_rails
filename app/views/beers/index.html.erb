<h1>All Beers</h1>

<%= render "shared/beer_details" %>

<div>
  <%= form_with url: "/beers", local: true, method: :get do |form| %>
    <%= form.label :query, "Filter Beers by Name:" %>
    <%= form.text_field :query %>
    <%= form.submit "Submit Exact Search" %>
  <% end %>
</div>

<div>
  <%= form_with url: "/beers", local: true, method: :get do |form| %>
    <%= form.label :fuzzy_query, "Filter Beers by Partial Name:" %>
    <%= form.text_field :fuzzy_query %>
    <%= form.submit "Submit Partial Search" %>
  <% end %>
</div>
