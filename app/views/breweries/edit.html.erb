<h1>Update Brewery Details</h1>

<%= form_with url: "/breweries/#{@brewery.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, "Name:" %>
  <%= form.text_field :name %>
  <%= form.label :city, "City:" %>
  <%= form.text_field :city %>
  <%= form.label :tanks, "Number of Tanks:" %>
  <%= form.number_field :tanks %>
  <%= form.label :has_license, "Has License?" %>
  <%= form.check_box :has_license %>
  <%= form.submit "Save Changes" %>
<% end %>